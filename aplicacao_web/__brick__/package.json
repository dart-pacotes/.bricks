{
	"name": "{{name.lowerCase().paramCase()}}",
	"description": "{{description}}",
	"author": "{{author}}",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		{{#useGitHubPagesAdapter}}
		"deploy": "npx gh-pages -d build -b master -r https://github.com/<github_username>/<repo_hosting_static_pages> -t true --no-jekyll",
		{{/useGitHubPagesAdapter}}
		"typesafe-i18n": "typesafe-i18n"
	},
	"devDependencies": {
		{{#useNodeAdapter}}
		"@sveltejs/adapter-node": "^1.2.1",
		{{/useNodeAdapter}}
		{{#useGitHubPagesAdapter}}
		"@sveltejs/adapter-static": "^2.0.1",
		{{/useGitHubPagesAdapter}}
		"@sveltejs/kit": "^1.15.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"postcss": "^8.4.21",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tailwindcss": "^3.2.7",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0"
	},
	"type": "module",
	"dependencies": {
		"rippleui": "^1.9.2",
		"typesafe-i18n": "^5.24.2"
	}
}