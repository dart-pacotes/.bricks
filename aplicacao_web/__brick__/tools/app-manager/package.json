{
	"name": "app-manager",
	"version": "0.0.0",
	"description": "A CLI tool to manage your app configurations and architecture",
	"private": true,
	"scripts": {
		"build": "tsup src/index.ts --format esm,cjs --dts --sourcemap",
		"start": "esbuild src/index.ts --bundle --outdir=dist --platform=node && node dist/index.js",
		"test": "jest",
		"docs": "typedoc",
		"docs:publish": "typedoc && gh-pagez -d docs -t true",
		"lint": "prettier --check . && eslint . --fix",
		"format": "prettier --write ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/spec/**"
	],
	"keywords": [
		"typescript",
		"cli",
		"app",
		"manager",
		"inquirer",
		"app-manager"
	],
	"author": "{{author}}",
	"license": "MIT",
	"devDependencies": {
		"@freitzzz/gh-pagez": "^5.0.1",
		"@jest/globals": "^29.5.0",
		"@types/node": "^18.15.11",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"esbuild": "^0.20.2",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-unused-imports": "^3.2.0",
		"jest": "^29.5.0",
		"prettier": "^3.1.1",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"tsup": "^6.7.0",
		"typedoc": "^0.24.6",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"@inquirer/confirm": "^3.1.6",
		"@inquirer/input": "^2.1.6",
		"@inquirer/select": "^2.3.2",
		"@web-pacotes/foundation-types": "^0.0.4"
	}
}