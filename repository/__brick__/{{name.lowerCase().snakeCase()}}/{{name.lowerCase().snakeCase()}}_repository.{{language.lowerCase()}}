  Future<Either<RequestError, void>> action({
    required final String input,
  });
}

class Fake{{name.pascalCase()}}Repository implements {{name.pascalCase()}}Repository {
  Future<Either<RequestError, void>> action({
    required final String input,
  });

  @override
  Future<Either<RequestError, void>> action({
    required final String input,
  }) {
      return Future.value(const Right(null));
